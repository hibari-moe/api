#!/usr/bin/env bash
Reset='\033[0m'
BRed='\033[1;31m'
BYellow='\033[1;33m'

if ! [ -x "$(command -v tectonic)" ]; then
  echo -e "${BRed}error:${Reset} tectonic is not installed. Install with ${BYellow}conda install tectonic${Reset}"
  exit 1
fi

mkdir -p report/out
tectonic report/index.tex --outdir report/out --synctex
