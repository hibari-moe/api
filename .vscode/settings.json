{
  // Toolchain for native Windows support with MikTeX
  "latex-workshop.latex.toolchain": [
    {
      "command": "xelatex",
      "args": [
        "--output-directory=out",
        "--interaction=nonstopmode",
        "%DOC%.tex"
      ]
    },
    {
      "command": "xelatex",
      "args": [
        "--output-directory=out",
        "--interaction=nonstopmode",
        "%DOC%.tex"
      ]
    }
  ],
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.outputDir": "out",
  "latex-workshop.latex.autoBuild.onSave.enabled": true,
  "latex-workshop.latex.autoBuild.onTexChange.enabled": true,
  "spellright.groupDictionaries": false,
  "spellright.language": "en-GB",
  "latex-workshop.debug.showUpdateMessage": false,
  "files.exclude": {
    "lib": true,
    "**/.git": true,
    "**/.gitkeep": true,
    "**/out": true
  },
  "editor.wordWrap": "bounded"
}
